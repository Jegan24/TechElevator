@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form method="post" asp-controller="Home" asp-action="Login" asp-antiforgery="true">
    <label asp-for="Email"></label><input asp-for="Email" /><span style="color: red;" asp-validation-for="Email"></span>
    <br />
    <label asp-for="Password"></label><input asp-for="Password" type="password" /><span style="color: red;" asp-validation-for="Password"></span>

    <input type="submit" value="Submit" />
</form>